@model CheckSkills.WebSite.ViewModels.CreateOrUpdateFormViewModel
@{
    ViewData["Title"] = "CreateForm";
}

<h2>CreateForm</h2>

<form method="post" action="@Url.Action("CreateForm","Form")">
    <div class="form-group">
        <label asp-for="CategoryId"></label> //
        <select asp-for="QuestionTypeId" asp-items="Model.QuestionTypes"></select>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select name="CategoryId" id="CategoryId">
            @foreach (var item in Model.Categories)
            {
                @:<option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>
    <input type="submit" value="Soumettre" />
</form>
